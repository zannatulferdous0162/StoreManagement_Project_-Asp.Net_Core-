@model StoreManagement_Project.Models.Warehouse

@{
    ViewData["Title"] = "Create Warehouse";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-warehouse me-2"></i>Create New Warehouse
                        </h3>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control" id="warehouseName" placeholder=" " required />
                                    <label for="warehouseName">Warehouse Name</label>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                    <div class="invalid-feedback">Please provide a warehouse name</div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Address" class="form-control" id="warehouseAddress" placeholder=" " required />
                                    <label for="warehouseAddress">Address</label>
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                    <div class="invalid-feedback">Please provide an address</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="reset" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-undo me-2"></i>Reset
                            </button>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Create Warehouse
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-3">
                    <div class="alert alert-info d-inline-flex align-items-center mb-0 py-2 px-3">
                        <i class="fas fa-info-circle me-2"></i>
                        <small>Create new warehouse to organize your inventory storage</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .form-floating label {
            transition: all 0.2s ease;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            border-color: #86b7fe;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 0.5rem;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }
    </style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Form submission animation
            $('form').on('submit', function() {
                if ($(this)[0].checkValidity()) {
                    $('button[type="submit"]').html('<i class="fas fa-spinner fa-spin me-2"></i> Creating...');
                }
            });

            // Input validation styling
            $('input').on('input', function() {
                if ($(this).is(':invalid')) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}
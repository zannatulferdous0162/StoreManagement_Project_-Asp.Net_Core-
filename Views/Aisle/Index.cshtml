                @model IEnumerable<StoreManagement_Project.Models.Aisle>

@{
    ViewData["Title"] = "Aisle Management";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4"><i class="fas fa-warehouse me-2"></i>Aisle Management</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Aisle
        </a>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Aisle List</h5>
            <div class="d-flex">
                <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Search aisles..." style="width: 200px;">
                <button class="btn btn-sm btn-outline-secondary ms-2" id="refreshBtn">
                    <i class="fas fa-sync-alt"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="aisleTable">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a href="#" class="sort-link" data-sort="aisleName">
                                    @Html.DisplayNameFor(model => model.AisleName)
                                    <i class="fas fa-sort float-end"></i>
                                </a>
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Remarks)
                            </th>
                            <th>
                                <a href="#" class="sort-link" data-sort="warehouse">
                                    @Html.DisplayNameFor(model => model.Warehouse)
                                    <i class="fas fa-sort float-end"></i>
                                </a>
                            </th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold">@Html.DisplayFor(modelItem => item.AisleName)</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Remarks))
                                    {
                                        <span class="text-muted">@Html.DisplayFor(modelItem => item.Remarks)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No remarks</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">@Html.DisplayFor(modelItem => item.Warehouse.Name)</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.AisleId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.AisleId" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.AisleId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Showing <span id="itemCount">@Model.Count()</span> aisles
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchInput').on('keyup', function() {
                const value = $(this).val().toLowerCase();
                $('#aisleTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
                $('#itemCount').text($('#aisleTable tbody tr:visible').length);
            });

            // Refresh button
            $('#refreshBtn').click(function() {
                location.reload();
            });

            // Sort functionality (example - would need server-side implementation)
            $('.sort-link').click(function(e) {
                e.preventDefault();
                const sortField = $(this).data('sort');
                alert('Sorting by ' + sortField + ' would be implemented with server-side sorting');
                // In a real implementation, you would make an AJAX call or redirect with sort parameter
            });
        });
    </script>
}
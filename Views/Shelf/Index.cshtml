@model IEnumerable<StoreManagement_Project.Models.Shelf>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShelfName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Warehouse.WarehouseId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShelfId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShelfId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShelfId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

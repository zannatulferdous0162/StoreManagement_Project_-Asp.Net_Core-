@model IEnumerable<StoreManagement_Project.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Purchase Orders";
}

<h2>Purchase Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>PO No</th>
            <th>Supplier</th>
            <th>Order Date</th>
            <th>Delivery Point</th>
            <th>Total Items</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.PONo</td>
                <td>@order.Supplier?.SupplierName</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.DeliveryPoint</td>
                <td>@order.PurchaseOrderItem?.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.PurchaseOrderId" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@order.PurchaseOrderId" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@order.PurchaseOrderId" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

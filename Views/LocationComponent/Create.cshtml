@model LocationComponentViewModel

@{
    ViewData["Title"] = "Create New Location Component";
}

<h2>Create New Location Component</h2>

<form asp-action="Create" method="post" id="locationComponentForm">
    <div class="form-group">
        <label asp-for="WarehouseId">Warehouse</label>
        <select asp-for="WarehouseId" asp-items="Model.Warehouses" class="form-control">
            <option value="">-- Select Warehouse --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AisleId">Aisle</label>
        <select asp-for="AisleId" asp-items="Model.Aisles" class="form-control">
            <option value="">-- Select Aisle --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ZoneId">Zone</label>
        <select asp-for="ZoneId" asp-items="Model.Zones" class="form-control">
            <option value="">-- Select Zone --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="RackId">Rack</label>
        <select asp-for="RackId" asp-items="Model.Racks" class="form-control">
            <option value="">-- Select Rack --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ShelfId">Shelf</label>
        <select asp-for="ShelfId" asp-items="Model.Shelves" class="form-control">
            <option value="">-- Select Shelf --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="BinId">Bin</label>
        <select asp-for="BinId" asp-items="Model.Bins" class="form-control">
            <option value="">-- Select Bin --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Cascade dropdown for Aisles based on Warehouse selection
            $('#WarehouseId').change(function () {
                var warehouseId = $(this).val();
                $('#AisleId').empty().append('<option value="">-- Select Aisle --</option>');

                if (warehouseId) {
                    $.getJSON('/LocationComponent/GetAisles', { warehouseId: warehouseId }, function (data) {
                        $.each(data, function (index, item) {
                            $('#AisleId').append($('<option/>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    });
                }
            });

            // Cascade dropdown for Zones based on Aisle selection
            $('#AisleId').change(function () {
                var aisleId = $(this).val();
                $('#ZoneId').empty().append('<option value="">-- Select Zone --</option>');

                if (aisleId) {
                    $.getJSON('/LocationComponent/GetZones', { aisleId: aisleId }, function (data) {
                        $.each(data, function (index, item) {
                            $('#ZoneId').append($('<option/>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    });
                }
            });

            // Cascade dropdown for Racks based on Zone selection
            $('#ZoneId').change(function () {
                var zoneId = $(this).val();
                $('#RackId').empty().append('<option value="">-- Select Rack --</option>');

                if (zoneId) {
                    $.getJSON('/LocationComponent/GetRacks', { zoneId: zoneId }, function (data) {
                        $.each(data, function (index, item) {
                            $('#RackId').append($('<option/>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    });
                }
            });

            // Cascade dropdown for Shelves based on Rack selection
            $('#RackId').change(function () {
                var rackId = $(this).val();
                $('#ShelfId').empty().append('<option value="">-- Select Shelf --</option>');

                if (rackId) {
                    $.getJSON('/LocationComponent/GetShelves', { rackId: rackId }, function (data) {
                        $.each(data, function (index, item) {
                            $('#ShelfId').append($('<option/>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    });
                }
            });

            // Cascade dropdown for Bins based on Shelf selection
            $('#ShelfId').change(function () {
                var shelfId = $(this).val();
                $('#BinId').empty().append('<option value="">-- Select Bin --</option>');

                if (shelfId) {
                    $.getJSON('/LocationComponent/GetBins', { shelfId: shelfId }, function (data) {
                        $.each(data, function (index, item) {
                            $('#BinId').append($('<option/>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    });
                }
            });
        });
    </script>
}

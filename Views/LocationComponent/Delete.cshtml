@model StoreManagement_Project.Models.LocationComponent

@{
    ViewData["Title"] = "Delete Location Component";
}

<h2>Delete Location Component</h2>

<h4>Are you sure you want to delete this location component?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Warehouse</dt>
        <dd class="col-sm-10">@Model.Warehouse.Name</dd>

        <dt class="col-sm-2">Aisle</dt>
        <dd class="col-sm-10">@Model.Aisle.AisleName</dd>

        <dt class="col-sm-2">Zone</dt>
        <dd class="col-sm-10">@Model.Zone.ZoneName</dd>

        <dt class="col-sm-2">Rack</dt>
        <dd class="col-sm-10">@Model.Rack.RackName</dd>

        <dt class="col-sm-2">Shelf</dt>
        <dd class="col-sm-10">@Model.Shelf.ShelfName</dd>

        <dt class="col-sm-2">Aisle</dt>
        <dd class="col-sm-10">@Model.Aisle.AisleName</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.LocationComponentId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 20px;
        }

        .footer-main {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            color: white;
            padding: 2rem 0;
            margin-top: 2rem;
            width: 100%;
            box-shadow: 0px -10px 30px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

            .footer-main h3, .footer-main h5 {
                margin-bottom: 1rem;
                font-size: 24px;
                text-align: center;
            }

        .divider {
            height: 2px;
            width: 80px;
            background: linear-gradient(to right, transparent, #fff, transparent);
            margin: 1rem auto;
        }

        .container {
            width: 90%;
            margin: auto;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 2rem;
        }

        .col {
            flex: 0 0 calc(25% - 20px);
            max-width: calc(25% - 20px);
        }

        .single-card-center {
            display: flex;
            justify-content: center;
            margin-bottom: 3rem;
        }

        .card-container {
            perspective: 1000px;
        }

        .card {
            width: 250px;
            height: 250px;
            background: transparent;
            position: relative;
            transform-style: preserve-3d;
            transform: rotateY(0deg);
            transition: transform 0.8s;
            cursor: pointer;
        }

            .card:hover {
                transform: rotateY(180deg);
            }

        .card-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

        .card-front {
            background: rgba(255, 255, 255, 0.15);
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            padding: 10px;
        }

            .card-front h3 {
                margin-bottom: 5px;
                font-size: 20px;
            }

            .card-front p {
                font-size: 14px;
            }

        .card-back {
            background: rgba(0, 0, 0, 0.3);
            color: #fff;
            transform: rotateY(180deg);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 10px;
        }

            .card-back h4 {
                font-size: 18px;
                margin-bottom: 10px;
            }

        .social-links {
            margin-top: 10px;
        }

            .social-links a {
                display: inline-block;
                background-color: #fff;
                width: 35px;
                height: 35px;
                margin: 5px;
                border-radius: 50%;
                text-align: center;
                line-height: 35px;
                color: #333;
                font-size: 18px;
                transition: 0.3s;
            }

                .social-links a:hover {
                    background-color: #0a66c2;
                    color: white;
                }

        p.small {
